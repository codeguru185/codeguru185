import os
from bs4 import BeautifulSoup

# Directory containing HTML files
html_folder = "your_html_folder_path"

# Initialize a dictionary to store the results
distinct_values = {}

# Function to extract 'Distinct' values from an HTML file
def extract_distinct_value(file_path):
    with open(file_path, "r", encoding="utf-8") as file:
        content = file.read()
        soup = BeautifulSoup(content, "html.parser")
        # Find the label with the text 'Distinct'
        label = soup.find("label", text="Distinct")
        if label:
            # Extract the value associated with the label
            distinct_values[file_path] = label.find_next("span").get_text()

# Iterate through HTML files in the folder
for filename in os.listdir(html_folder):
    if filename.endswith(".html"):
        file_path = os.path.join(html_folder, filename)
        extract_distinct_value(file_path)

# Print or use the distinct values
for file_path, value in distinct_values.items():
    print(f"File: {file_path}\nDistinct Value: {value}\n")

# Optionally, you can store the values in a file or process them further.
