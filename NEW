import pandas as pd
import os

def split_large_csv(input_csv, output_directory, num_parts):
    # Ensure the output directory exists
    os.makedirs(output_directory, exist_ok=True)

    # Open the input CSV file in chunks
    for i, chunk in enumerate(pd.read_csv(input_csv, chunksize=num_parts)):
        part_file = os.path.join(output_directory, f'part_{i + 1}.csv')
        chunk.to_csv(part_file, index=False)

if __name__ == "__main__":
    input_csv = 'your_large_input_file.csv'  # Replace with your input CSV file path
    output_directory = 'output_parts'         # Replace with the output directory path
    num_parts = 4                            # Number of parts to split the CSV file into

    split_large_csv(input_csv, output_directory, num_parts)
